extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div(style='float:left;')
		div(style='width: 350px; height: 250px; background:#424242')
			div(style='margin-left: 20px; width: calc(100% - 40px);')
				font(size='0') &nbsp;
				h2(style='color:white; ') 업데이트 내역
				hr
				div(style='overflow-y: scroll; width: 100%; height: 180px;')
					h3(style='color: white;') [2.5.2] 대규모 패치
						br
						| 　1. 메인화면 업데이트
						br
						| 　2. 3개의 게임 서버 추가
						br
						| 　3. 방 만들기 버튼 디자인 변경
		div(style='width: 350px; height: 250px; background:#424242; margin-top: 20px;')
			div(style='margin-left: 20px; width: calc(100% - 40px);')
				font(size='0') &nbsp;
				h2(style='color:white; ') 일반 공지
				hr
				div(style='overflow-y: scroll; width: 100%; height: 180px;')
					h3(style='color:white;') 내용이 없습니다.

	div(style='float: left; margin-left:calc(100% - 700px - 247px - 5%)')
		button#game-start.jjo-display= L('gameStart')
		br
		div.server-list-box(style='margin-top: 15px;')
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list

	div(style='float: right;')
		div(style='width: 350px; height: 250px; background:#424242')
			div(style='margin-left: 20px; width: calc(100% - 40px);')
				font(size='0') &nbsp;
				h2(style='color:white; ') 이벤트
				hr
				div(style='overflow-y: scroll; width: 100%; height: 180px;')
					h3(style='color:white;') 내용이 없습니다.
		div(style='width: 350px; height: 250px; background:#424242; margin-top: 20px;')
			div(style='margin-left: 20px; width: calc(100% - 40px);')
				font(size='0') &nbsp;
				h2(style='color:white; ') 중요 공지
				hr
				div(style='overflow-y: scroll; width: 100%; height: 180px;')
					h3(style='color:white;') 내용이 없습니다.

	+separator(10)

block Bottom
	div.bottom-legal!= L('dictionarySupport')
	div.bottom-legal!= L('etcSupport')
